//hit send

const express = require('express');
const bodyParser = require('body-parser');

const app = express();
const PORT = 3000;

app.use(bodyParser.json());
app.use(bodyParser.urlencoded({ extended: true }));

let users = [];

function validateUser(req, res, next) {
  const { id, name, address } = req.body;

  if (!id || typeof id !== 'number') {
    return res.status(400).json({ error: 'id is required and must be a number' });
  }
  if (!name || typeof name !== 'string') {
    return res.status(400).json({ error: 'name is required and must be a string' });
  }
  if (!address || typeof address !== 'string') {
    return res.status(400).json({ error: 'address is required and must be a string' });
  }

  next(); 
}

app.post('/users', validateUser, (req, res) => {
  const { id, name, address } = req.body;
  users.push({ id, name, address });
  res.status(201).json({ message: 'User added successfully', user: { id, name, address } });
});

app.get('/users', (req, res) => {
  res.json(users);
});

app.listen(PORT, () => {
  console.log(`Server running at http://localhost:${PORT}`);
});
