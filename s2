<body ng-controller="bankCtrl">
    <h2>Bank Details</h2>
    <table border="1" cellpadding="8" cellspacing="0">
        <tr>
            <th>Bank Name</th>
            <th>MICR Code</th>
            <th>IFSC Code</th>
            <th>Branch</th>
            <th>Address</th>
        </tr>
        <tr ng-repeat="b in banks">
            <td>{{ b.bankName }}</td>
            <td>{{ b.micr }}</td>
            <td>{{ b.ifsc }}</td>
            <td>{{ b.branch }}</td>
            <td>{{ b.address }}</td>
        </tr>
    </table>
    <script>
        var app = angular.module("bankApp", []);
